<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">To-Do List</h2>
            <form action="/edit-todo/{{todo._id}}" method="post" class="input-group mb-3 d-flex flex-column">
                <input
                    type="text"
                    name="todo"
                    class="form-control w-100"
                    placeholder="Enter task"
                    id="taskInput"
                    value="{{todo.todo}}"
                />
                <label for="complated"> 
                  <input id="complated" type="checkbox" name="complated" {{#if todo.complated}}checked{{/if}}>
                  Complated
                </label>
                <div class="input-group-append">
                    <button class="btn btn-primary" type="submit" id="updateTaskBtn">Update Task</button>
                </div>
            </form>
            <button onclick="history.back()" class="btn btn-dark">Back to main page</button>
        </div>
    </div>
</div>
