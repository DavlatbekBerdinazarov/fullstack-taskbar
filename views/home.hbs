<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center mb-4">To-Do List</h2>
      <form action="/addtodo" method="post" class="input-group mb-3">
        <input
          type="text"
          name="todo"
          class="form-control"
          placeholder="Enter task"
          id="taskInput"
        />
        <div class="input-group-append">
          <button class="btn btn-primary" type="submit" id="addTaskBtn">Add Task</button>
        </div>
      </form>
      <ul class="list-group" id="taskList">
        {{#if todos.length}}
          {{#each todos}}
            <!-- Tasks will be added here dynamically -->
            <li class="list-inline-item bg-white py-3 px-2 d-flex align-items-center justify-content-between border rounded position-relative my-1">
              <div class="d-flex gap-2 align-items-center pt-2 pl-4">
                <!-- Apply 'text-decoration-line-through' class if 'complated' is true -->
                {{#if complated}}
                  <p class="text-decoration-line-through text-primary">{{todo}}</p>
                {{else}}
                  <p class="text-danger">{{todo}}</p>
                {{/if}}
              </div>
              <div class="btns d-flex">
                <a href="/edit-todo/{{_id}}" class="p-1 text-dark"><i class="fas fa-edit"></i></a>
                <form action="delete-todo/{{_id}}" method="post">
                  <button type="submit" class="btn btn-outline-danger"><i class="fas fa-trash-alt"></i></button>
                </form>
              </div>
            </li>
          {{/each}}
        {{/if}}
      </ul>
    </div>
  </div>
</div>
